<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/current_pin_frame"
        android:layout_width="260dp"
        android:layout_height="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="180dp"
        android:background="@drawable/bg_manage_group"
        android:text="XXXX"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:textStyle="bold"
        android:textColor="#333232"
        />

    <TextView
        android:id="@+id/current_pin"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/current_pin_frame"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="168dp"
        android:background="@drawable/margin"
        android:text="Current Pin"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:textColor="#FA4A0C"
        />

    <EditText
        android:id="@+id/new_pin"
        android:layout_width="260dp"
        android:layout_height="38dp"
        android:layout_marginTop="31dp"
        android:autofillHints="username"
        android:background="@drawable/input_box"
        android:drawablePadding="19dp"
        android:elevation="4dp"
        android:hint="New Password"
        android:inputType="number"
        android:paddingStart="16dp"
        android:paddingEnd="0dp"
        android:textColorHint="#ADADAF"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/current_pin_frame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="14dp"
        android:width="260dp"
        android:text="The pin must be 4 digits."
        android:textColor="#969FAA"
        android:textSize="13.5sp"
        app:layout_constraintTop_toBottomOf="@id/new_pin"
        app:layout_constraintStart_toStartOf="@id/new_pin"
        />

    <TextView
        android:id="@+id/tv_modify"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_add_location"
        android:elevation="4dp"
        android:gravity="center"
        android:text="Modify"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="13.5sp"
        app:layout_constraintTop_toBottomOf="@id/tv_hint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>