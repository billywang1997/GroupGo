<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFBFA">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="40dp">

            <ImageView
                android:id="@+id/group"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:contentDescription="@null"
                android:src="@drawable/modify_nickname"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/new_nickname"
                android:layout_width="260dp"
                android:layout_height="38dp"
                android:layout_marginTop="26dp"
                android:autofillHints="username"
                android:background="@drawable/input_box"
                android:drawablePadding="19dp"
                android:elevation="4dp"
                android:hint="New Nickname"
                android:inputType="text"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingEnd="0dp"
                android:textColorHint="#ADADAF"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/group"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/tv_modify"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_marginTop="46dp"
                android:background="@drawable/bg_add_location"
                android:elevation="4dp"
                android:gravity="center"
                android:text="Modify"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="13.5sp"
                app:layout_constraintTop_toBottomOf="@id/new_nickname"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>