<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFBFA">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="40dp"
            >

            <ImageView
                android:id="@+id/group"
                android:layout_width="320dp"
                android:layout_height="220dp"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:contentDescription="@null"
                android:src="@drawable/add_group"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/number"
                android:layout_width="260dp"
                android:layout_height="38dp"
                android:layout_marginTop="26dp"
                android:autofillHints="username"
                android:background="@drawable/input_box"
                android:drawablePadding="19dp"
                android:elevation="4dp"
                android:hint="Group Number"
                android:inputType="number"
                android:paddingStart="16dp"
                android:paddingEnd="0dp"
                android:textColorHint="#ADADAF"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/group"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <EditText
                android:id="@+id/pin"
                android:layout_width="260dp"
                android:layout_height="38dp"
                android:layout_marginTop="31dp"
                android:autofillHints="username"
                android:background="@drawable/input_box"
                android:drawablePadding="19dp"
                android:elevation="4dp"
                android:hint="Group Pin"
                android:inputType="numberPassword"
                android:paddingStart="16dp"
                android:paddingEnd="0dp"
                android:textColorHint="#ADADAF"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/tv_add"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_marginTop="46dp"
                android:background="@drawable/bg_add_location"
                android:elevation="4dp"
                android:gravity="center"
                android:text="Add Group"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="13.5sp"
                app:layout_constraintTop_toBottomOf="@id/pin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_hint1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:text="Create a new group"
                android:textColor="#FA4A0C"
                android:textSize="13.5sp"
                app:layout_constraintTop_toBottomOf="@id/tv_add"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />




        </androidx.constraintlayout.widget.ConstraintLayout>



    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>