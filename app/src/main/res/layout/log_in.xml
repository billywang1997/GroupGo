<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFBFA">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/goll_icon"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:contentDescription="@null"
                android:src="@drawable/icon_groupgo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/name"
                android:layout_width="238dp"
                android:layout_height="38dp"
                android:layout_marginTop="31dp"
                android:autofillHints="username"
                android:background="@drawable/input_box"
                android:drawableStart="@drawable/icon_person1"
                android:drawablePadding="19dp"
                android:elevation="4dp"
                android:hint="Username"
                android:inputType="text"
                android:paddingStart="8dp"
                android:paddingEnd="0dp"
                android:textColorHint="#ADADAF"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/goll_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <EditText
                android:id="@+id/password"
                android:layout_width="238dp"
                android:layout_height="38dp"
                android:layout_marginTop="31dp"
                android:autofillHints="password"
                android:background="@drawable/input_box"
                android:drawableStart="@drawable/icon_lock"
                android:drawablePadding="19dp"
                android:elevation="4dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingStart="8dp"
                android:paddingEnd="0dp"
                android:textColorHint="#ADADAF"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/tv_log_in"
                android:layout_width="238dp"
                android:layout_height="46dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/gradient_button"
                app:layout_constraintTop_toBottomOf="@id/password"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:elevation="4dp"
                android:gravity="center"
                android:text="LOG IN"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="13.5sp" />

            <LinearLayout
                android:id="@+id/tv_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_log_in"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_hint1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="30dp"
                    android:text="Donâ€™t Have an Accont? "
                    android:textColor="#969FAA"
                    android:textSize="13.5sp"
                    />

                <TextView
                    android:id="@+id/tv_hint2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="30dp"
                    android:text="Register"
                    android:textColor="#FA4A0C"
                    android:textSize="13.5sp"
                    app:layout_constraintStart_toEndOf="@id/tv_hint"
                    app:layout_constraintTop_toBottomOf="@id/tv_log_in" />

            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>






</androidx.constraintlayout.widget.ConstraintLayout>